<!DOCTYPE html>
<html lang="en">
  <!--partial template-->
  <%- include("./partials/head.ejs") %>
  <body>
    <h1>All Blogs</h1>
    <h2>Your path to becoming a Node.js expert</h2>

    <!--partial template-->
    <%- include("./partials/nav.ejs") %>
    <div class="container">
      <h2>All Blogs</h2>

      <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
      <div class="blog-item">
        <a href="/blogs/<%= blog._id %>">
          <h3><%= blog.title %></h3>
          <p><%= blog.snippet %></p>
        </a>
      </div>
      <% }) %> <% } else { %>
      <p>No blogs available to display.</p>
      <% } %>
    </div>

    <!--partial template-->
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
